<%= form_with(model: @order, url: carts_path(@cart), method: :post, local: true, html: { class: 'needs-validation', novalidate: '' }) do |f| %>

  <div class="mb-3">
    <%= f.label :name, 'name', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      confirm your name
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, 'phone-number', class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      confirm phone number
    </div>
  </div>
  <%= f.submit 'submit', class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  window.addEventListener('popstate', function(event) {
    location.reload();
  });
</script>