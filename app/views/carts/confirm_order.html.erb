<%= form_with(model: @order, url: carts_path(@cart), method: :post, local: true, html: { class: 'needs-validation', novalidate: '' }) do |f| %>

  <div class="mb-3">
    <%= f.label :name, 'お名前', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      confirm your name
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, '電話番号', class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      confirm phone number
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :address, 'your-nursary-school', class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      
    </div>
  </div>

  <%= f.submit 'submit', class: 'btn btn-primary' %>
<% end %>
