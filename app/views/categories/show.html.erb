
    <div class="row row-cols-1 row-cols-md-3 g-4 pt-3"> 
      <% @category_item.each do|item| %>
        <div class="col-4 col-md-6 col-lg-4">
          <div class="card h-100">
            <img src="https://cdn.shopify.com/s/files/1/0583/6865/5525/products/coffee_e92bf7ab-56e7-4f0b-8d0c-099caf7b89c7_1024x1024.jpg?v=1656471453" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=item.name%></h5>
              <div class="product-price-index pb-2 text-success"><span><%=item.price%>$</span></div>  
              <%= link_to("Buy It", item_path(item), {class: "btn btn-primary stretched-link"}) %>
            </div>
          </div>
        </div>
      <% end %>
    </div> 

