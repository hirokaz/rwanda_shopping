<%provide(:title,"items")%>

  
<div class="shopping-list">
  <% item=@tops_item.first %>
  <div class="row pt-2 pb-2">
    <div class="col Item-title">
      <h1><%= item.category.name %></h1>
    </div> 
    <div class="col pt-2">
      <%= link_to("View All", category_path(item.category_id), {class: "btn btn-outline-primary View-All-button"}) %>
    </div>
  </div>
  <div class="multiple-items pt-2">
    <% @tops_item.each do |item| %>
      <div class="card h-100 d-flex flex-column align-items-stretch" style="width: 18rem;">
        <%= image_tag item.images.first,class:"card-img-top card-top-image" %>
        <div class="card-body">
          <p class="card-text fw-bold"><span><%= truncate(item.name, length: 18)%></span></p>
        <div class="product-price-index pb-2 text-success"><span><%= item.price %>$</span></div>
          <%= link_to("Buy It", item_path(item), {class: "btn btn-primary stretched-link"}) %>
        </div>
      </div>
    <% end %>
  </div>

</div>


