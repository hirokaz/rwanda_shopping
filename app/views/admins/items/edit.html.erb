<%= form_with model:@item,url:admins_item_path do |f|%>
 <%= render 'shared/error_messages' %>
 <form>
 <div class="row g-3">
  <div class="col-md-6">
     <%= f.label :name,class:"form-label"%>
     <%= f.text_field :name, class: "form-control",placeholder: "Enter item name"%>
  </div>
  <div class="col-md-6">
     <%= f.label :price,class:"form-label"%>
     <%= f.number_field :price , class: "form-control",placeholder: "Enter item price"%>
  </div>
</div>
<div class="row g-3">
  <div class="col-12">
    <%= f.label :description,class:"form-label" %>
    <%= f.text_field :description, class: "form-control",placeholder: "Enter item description",rows:"3" %>
  </div>
  <div class="col-12">
    <%= f.label :size %>
    <%= f.select :size, [["S", "S"], ["M", "M"],["L","L"]], include_blank: "select",class:"form-select" %>
    <%= f.label :category %>
    <%= f.select :category_id, [["tops", 1], ["bottoms", 1]], include_blank: "select" ,class:"form-select" %>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">item add</button>
</div>
</form>
<% end %>
<%= form_with(model: @item, url: admins_item_path(@item.id), method: :delete, data: {confirm: 'Are you sure?'}) do |form| %>
  <%= form.submit 'Delete', class: 'btn btn-danger' %>
<% end %>
